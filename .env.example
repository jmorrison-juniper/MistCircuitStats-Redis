# Mist API Configuration
MIST_API_TOKEN=your_token_here,optional_second_token,optional_third_token
MIST_ORG_ID=
MIST_HOST=api.mist.com

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Worker Configuration
WORKER_INTERVAL=300

# Logging
LOG_LEVEL=INFO

# Large Org Optimization
# Set to 'true' to skip VPN peers and insights (faster initial load)
# Set to 'false' to fetch all data (may take hours for large orgs)
SKIP_ENRICHMENT=false

# Parallel Processing
# Number of parallel threads for VPN/insights fetching (default: 5)
# Increase for faster fetching, decrease if hitting rate limits
PARALLEL_WORKERS=5

# Cache Optimization
# Use cached data on startup if still valid (default: true)
# Set to false to always do full refresh on startup
USE_CACHED_ON_STARTUP=true

# Enable incremental refresh - skip refresh if cache is still fresh (default: true)
# Set to false to always do full refresh on schedule
INCREMENTAL_REFRESH=true

# How old cache can be before considered stale (in seconds, default: 600)
# Must be less than WORKER_INTERVAL for incremental refresh to work
STALE_THRESHOLD=600
